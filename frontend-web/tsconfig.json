{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@component": ["components"],
      "@component/home": ["components/home"],
      "@types": ["utils/types"],
      "@lib": ["lib"],
      "@hooks": ["hooks"]
      // "@component/about-us": ["components/about-us"],
      // "@component/icons": ["components/icons"],
      // "@locale": ["locales"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "lib/withApollo.tss"],
  "exclude": ["node_modules"]
}
